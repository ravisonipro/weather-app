<h1>Weather App</h1>

<%= form_tag(weather_path, method: 'get') do %>
  <div class="form-group">
    <%= text_field_tag :city, nil, class: 'form-control', placeholder: 'Enter a city name', required: true %>
  </div>
  <%= submit_tag 'Get Weather', class: 'btn btn-primary' %>
<% end %>

<% if @weather_data %>
  <h2>Weather for <%= @city %></h2>
  <p><strong>Temperature:</strong> <%= @weather_data['list'][0]['main']['temp'] %>Â°C</p>
  <p><strong>Description:</strong> <%= @weather_data['list'][0]['weather'][0]['description'] %></p>
<% end %>
